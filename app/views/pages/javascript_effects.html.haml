  :javascript
    function catchEvent(event){
      eventSrcId = ((event.target) ? event.target.id : 'undefined');
      eventType = event.type;
      status = eventSrcId + " has received " + eventType + " type";
      document.getElementById("1-status").innerHTML = status;
    }
