.event-container#container2
  %h3 Mouseout|Mouseover With To- And From- Element
  #2-outer-div{style: "width:130px;height:130px;border:1px solid black;background:black;padding:30px;"}
    #2-inner-div{style: "width:80px;height:80px;border:1px solid black;background:white;padding:20px;"}
  #2-statusfrom
  #2-statusto
  :javascript
    function showtofrom(event){
      if(event.type == "mouseover"){
        var fromElement = event.fromElement || event.relatedTarget;
        statusdiv1.innerHTML = "from Element " + fromElement.id;
      }
      if (event.type == "mouseout"){//for onmouseout event
        var toElement = event.toElement || event.relatedTarget;
        statusdiv2.innerHTML = "to Element " + toElement.id;
      }
    }
    var statusdiv1 = document.getElementById("2-statusfrom");
    var statusdiv2 = document.getElementById("2-statusto");
    
    document.getElementById("container2").onmouseover = showtofrom;
    document.getElementById("container2").onmouseout = showtofrom;

