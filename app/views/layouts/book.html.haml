!!!
%html
  %head

    %title= content_for?(:title) ? yield(:title) : "HudhudHouse"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)




  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"} Hudhud House
          .nav-collapse.collapse
            %ul.nav
              %li.active
                %a{:href => "/"} Home
              %li
                %a{:href => "/aboutus"} About
              %li
                %a{:href => "/contact"} Contact
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Blogs
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to("Rails Mongo and Backbone app", mongo_rails_backbone_setup_path)
                  %li
                    = link_to("Basic postgres setup for rails", blog_path("postgres_setup"))
                  %li
                    = link_to("Upload files on Amazon using carrier Wave", blog_path("file_upload_with_carrier_wave_and_fog"))
                  %li.divider
                  %li.nav-header Javascript
                  %li
                    = link_to("Effects", blog_path("javascript_effects"))
                  %li
                    = link_to("Course Outline", blog_path("javascript_course_outline"))
                  %li.divider
                  %li
                    = link_to("Miscellaneous Blog Index", get_listing_path)
  
  
    .container
      .row
        .span2
          = render_index
        .span8
          = yield
        .span2
          = render_right_panel

